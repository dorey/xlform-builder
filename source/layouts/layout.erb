<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= data.page.title || "XLForm Builder" %></title>
    <link rel="shortcut icon" type="image/x-icon" href="images/share.png">

    <%= stylesheet_link_tag "normalize", "xlformbuilder" %>
    <%= stylesheet_link_tag "demo" %>
    <%= yield_content :head %>
  </head>
  
  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
  <%= javascript_include_tag  "libs" %>
  <%= javascript_include_tag  "xlformbuilder" %>
  <%= javascript_include_tag  "demo" %>
  <%= yield_content :js %>
</html>